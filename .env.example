# ================================================
# ELMAHROSA INTERNATIONAL — TEOS Egypt Ecosystem
# Salma Unity Care Hospital — Environment Config
# Copy this file to .env and fill in your values
# ================================================

# Server
PORT=5000
NODE_ENV=production

# Database
MONGODB_URI=mongodb://localhost:27017/salma_unity_care_hospital

# Authentication
JWT_SECRET=your_jwt_secret_here_minimum_32_characters

# Blockchain (Solana)
BLOCKCHAIN_NODE_URL=https://api.mainnet-beta.solana.com
CONTRACT_ADDRESS=your_solana_contract_address
HOSPITAL_WALLET=your_solana_wallet_address
NETWORK=mainnet

# Twilio (SMS & Voice Alerts)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Google APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key

# AI Integration (xAI)
AI_API_KEY=your_xai_api_key

# Slack Notifications
SLACK_TOKEN=your_slack_bot_token

# Agora (Telemedicine Video Calls)
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_certificate

# Redis (Caching)
REDIS_URL=redis://localhost:6379

# Email (Nodemailer)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password

# API Version
API_VERSION=1.0
